{
  "designSystem": {
    "metadata": {
      "name": "Plant Shop Mobile Design System",
      "platform": "Mobile iOS/Android Application",
      "designLanguage": "Soft minimalist with organic rounded shapes",
      "targetResolution": "375x812 (iPhone X and similar aspect ratios)"
    },
    "colorPalette": {
      "primary": {
        "background": "#c4dbb3",
        "backgroundLight": "#e8f3df",
        "description": "Soft sage green for main background, evokes natural, calming plant aesthetic"
      },
      "secondary": {
        "surface": "#f5f3ed",
        "surfaceCard": "#d4e8c8",
        "description": "Off-white cream for cards and elevated surfaces"
      },
      "accent": {
        "primary": "#2d4a2c",
        "primaryHover": "#3d5a3c",
        "description": "Deep forest green for primary CTAs, active states, and emphasis"
      },
      "neutral": {
        "white": "#ffffff",
        "lightGray": "#e8e6e0",
        "mediumGray": "#c2c0b8",
        "darkGray": "#5a5954",
        "black": "#1a1918"
      },
      "semantic": {
        "success": "#4a7c4e",
        "warning": "#d4a72c",
        "error": "#c44545",
        "favorite": "#2d4a2c"
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "SF Pro Display, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "fallback": "system-ui, sans-serif"
      },
      "scale": {
        "heading1": {
          "fontSize": "32px",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.01em"
        },
        "heading2": {
          "fontSize": "24px",
          "fontWeight": "700",
          "lineHeight": "1.3",
          "letterSpacing": "-0.005em"
        },
        "heading3": {
          "fontSize": "20px",
          "fontWeight": "600",
          "lineHeight": "1.4"
        },
        "body": {
          "fontSize": "16px",
          "fontWeight": "400",
          "lineHeight": "1.5",
          "color": "#5a5954"
        },
        "bodySmall": {
          "fontSize": "14px",
          "fontWeight": "400",
          "lineHeight": "1.5",
          "color": "#5a5954"
        },
        "caption": {
          "fontSize": "12px",
          "fontWeight": "400",
          "lineHeight": "1.4",
          "color": "#8a8884"
        },
        "label": {
          "fontSize": "13px",
          "fontWeight": "500",
          "letterSpacing": "0.01em"
        },
        "price": {
          "fontSize": "28px",
          "fontWeight": "700",
          "color": "#1a1918"
        }
      }
    },
    "spacing": {
      "scale": "4px base unit",
      "values": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "40px"
      }
    },
    "layout": {
      "mobile": {
        "screenPadding": "20px",
        "cardPadding": "20px",
        "sectionSpacing": "24px",
        "componentGap": "12px"
      },
      "safeArea": {
        "top": "44px",
        "bottom": "34px",
        "description": "iOS safe area insets for notch and home indicator"
      }
    },
    "components": {
      "buttons": {
        "primary": {
          "background": "#2d4a2c",
          "color": "#ffffff",
          "padding": "16px 32px",
          "borderRadius": "28px",
          "fontSize": "17px",
          "fontWeight": "600",
          "border": "none",
          "width": "100%",
          "minHeight": "56px",
          "transition": "all 0.2s ease",
          "boxShadow": "0 4px 12px rgba(45, 74, 44, 0.25)",
          "hover": {
            "background": "#3d5a3c",
            "transform": "translateY(-1px)",
            "boxShadow": "0 6px 16px rgba(45, 74, 44, 0.3)"
          },
          "active": {
            "transform": "scale(0.98)"
          }
        },
        "pill": {
          "background": "#e8e6e0",
          "color": "#5a5954",
          "padding": "12px 24px",
          "borderRadius": "24px",
          "fontSize": "15px",
          "fontWeight": "500",
          "border": "none",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#d8d6d0"
          },
          "active": {
            "background": "#2d4a2c",
            "color": "#ffffff"
          }
        },
        "icon": {
          "size": "48px",
          "background": "#f5f3ed",
          "borderRadius": "50%",
          "padding": "12px",
          "border": "none",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#e8e6e0",
            "transform": "scale(1.05)"
          },
          "active": {
            "transform": "scale(0.95)"
          }
        },
        "iconSmall": {
          "size": "40px",
          "background": "#ffffff",
          "borderRadius": "50%",
          "padding": "10px",
          "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.08)"
        }
      },
      "cards": {
        "product": {
          "background": "#d4e8c8",
          "borderRadius": "32px",
          "padding": "0",
          "border": "none",
          "boxShadow": "0 4px 16px rgba(0, 0, 0, 0.08)",
          "overflow": "hidden",
          "imageContainer": {
            "background": "#d4e8c8",
            "borderRadius": "32px",
            "padding": "24px",
            "aspectRatio": "1:1",
            "position": "relative"
          },
          "contentArea": {
            "padding": "16px 20px 20px 20px",
            "background": "transparent"
          },
          "favoriteButton": {
            "position": "absolute",
            "top": "16px",
            "right": "16px",
            "size": "40px",
            "background": "#ffffff",
            "borderRadius": "50%",
            "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.1)"
          },
          "actionButton": {
            "position": "absolute",
            "bottom": "16px",
            "right": "16px",
            "size": "48px",
            "background": "#2d4a2c",
            "borderRadius": "50%",
            "color": "#ffffff"
          }
        },
        "detail": {
          "background": "#f5f3ed",
          "borderRadius": "32px",
          "padding": "24px",
          "boxShadow": "none",
          "imageContainer": {
            "background": "#d4e8c8",
            "borderRadius": "24px",
            "padding": "32px",
            "marginBottom": "24px"
          }
        }
      },
      "navigation": {
        "topBar": {
          "height": "auto",
          "padding": "20px",
          "background": "transparent",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between",
          "marginTop": "44px"
        },
        "bottomBar": {
          "height": "72px",
          "background": "#2d4a2c",
          "borderRadius": "36px",
          "padding": "12px 24px",
          "position": "fixed",
          "bottom": "24px",
          "left": "20px",
          "right": "20px",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-around",
          "boxShadow": "0 8px 24px rgba(45, 74, 44, 0.3)",
          "backdropFilter": "blur(10px)",
          "zIndex": "1000"
        },
        "navItem": {
          "size": "48px",
          "padding": "12px",
          "borderRadius": "50%",
          "color": "#ffffff",
          "opacity": "0.6",
          "transition": "all 0.2s ease",
          "active": {
            "background": "#ffffff",
            "color": "#2d4a2c",
            "opacity": "1"
          }
        }
      },
      "tabs": {
        "container": {
          "display": "flex",
          "gap": "8px",
          "padding": "0",
          "marginBottom": "24px"
        },
        "tab": {
          "background": "#e8e6e0",
          "color": "#5a5954",
          "padding": "14px 28px",
          "borderRadius": "24px",
          "fontSize": "15px",
          "fontWeight": "500",
          "border": "none",
          "transition": "all 0.2s ease",
          "active": {
            "background": "#2d4a2c",
            "color": "#ffffff"
          }
        }
      },
      "ratings": {
        "container": {
          "display": "flex",
          "alignItems": "center",
          "gap": "6px",
          "marginTop": "4px"
        },
        "star": {
          "size": "14px",
          "color": "#2d4a2c"
        },
        "text": {
          "fontSize": "14px",
          "color": "#5a5954",
          "fontWeight": "400"
        }
      },
      "infoGrid": {
        "container": {
          "display": "grid",
          "gridTemplateColumns": "repeat(auto-fit, minmax(80px, 1fr))",
          "gap": "16px",
          "marginTop": "16px"
        },
        "item": {
          "display": "flex",
          "flexDirection": "column",
          "gap": "4px"
        },
        "label": {
          "fontSize": "12px",
          "color": "#8a8884",
          "fontWeight": "400",
          "textTransform": "capitalize"
        },
        "value": {
          "fontSize": "15px",
          "color": "#1a1918",
          "fontWeight": "600"
        }
      },
      "header": {
        "container": {
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between",
          "marginBottom": "24px"
        },
        "title": {
          "display": "flex",
          "flexDirection": "column",
          "gap": "4px"
        },
        "subtitle": {
          "fontSize": "15px",
          "color": "#5a5954",
          "fontWeight": "400"
        },
        "mainTitle": {
          "fontSize": "32px",
          "fontWeight": "700",
          "color": "#1a1918"
        },
        "action": {
          "size": "48px",
          "background": "#d4e8c8",
          "borderRadius": "50%"
        }
      },
      "backButton": {
        "size": "48px",
        "background": "#f5f3ed",
        "borderRadius": "50%",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "border": "none",
        "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.08)"
      },
      "priceDisplay": {
        "fontSize": "28px",
        "fontWeight": "700",
        "color": "#1a1918",
        "display": "flex",
        "alignItems": "baseline"
      }
    },
    "effects": {
      "shadows": {
        "card": "0 4px 16px rgba(0, 0, 0, 0.08)",
        "cardHover": "0 8px 24px rgba(0, 0, 0, 0.12)",
        "button": "0 4px 12px rgba(45, 74, 44, 0.25)",
        "nav": "0 8px 24px rgba(45, 74, 44, 0.3)",
        "subtle": "0 2px 8px rgba(0, 0, 0, 0.08)"
      },
      "animations": {
        "fadeIn": {
          "duration": "0.3s",
          "timingFunction": "ease-out"
        },
        "slideUp": {
          "duration": "0.4s",
          "timingFunction": "cubic-bezier(0.4, 0, 0.2, 1)",
          "transform": "translateY(20px) to translateY(0)"
        },
        "scalePress": {
          "duration": "0.15s",
          "timingFunction": "ease-in-out",
          "transform": "scale(1) to scale(0.98)"
        },
        "heartbeat": {
          "duration": "0.3s",
          "timingFunction": "ease-in-out",
          "keyframes": "scale(1) -> scale(1.2) -> scale(1)"
        }
      },
      "transitions": {
        "default": "all 0.2s ease",
        "slow": "all 0.3s ease",
        "fast": "all 0.15s ease"
      }
    },
    "iconography": {
      "style": "Line icons with rounded stroke caps",
      "strokeWidth": "2px",
      "sizes": {
        "sm": "18px",
        "md": "22px",
        "lg": "26px"
      },
      "colors": {
        "default": "#5a5954",
        "active": "#2d4a2c",
        "light": "#ffffff"
      }
    },
    "images": {
      "product": {
        "aspectRatio": "1:1",
        "objectFit": "contain",
        "background": "Soft sage green matching card background",
        "padding": "24px",
        "quality": "High resolution, clean product photography"
      },
      "style": {
        "characteristics": [
          "Clean, isolated product shots",
          "Consistent lighting and shadows",
          "Centered composition",
          "Natural, organic aesthetic",
          "Minimal props or context"
        ]
      }
    },
    "designPrinciples": {
      "softMinimalism": {
        "description": "Use soft, rounded shapes and muted natural colors",
        "implementation": "Large border-radius values (24px-32px), organic color palette"
      },
      "naturalAesthetic": {
        "description": "Evoke calm, natural environment suitable for plant shop",
        "colors": "Sage greens, creams, forest greens",
        "imagery": "Clean product photography with organic subjects"
      },
      "touchOptimized": {
        "description": "All interactive elements optimized for finger taps",
        "minTouchTarget": "44x44px",
        "spacing": "Adequate spacing between interactive elements"
      },
      "consistency": {
        "borderRadius": "Consistent rounding: 24px for cards, 28px for buttons, 50% for circles",
        "spacing": "Follow 4px/8px grid system",
        "elevation": "Subtle shadows for depth without harsh contrasts"
      },
      "visualHierarchy": {
        "emphasis": "Bold typography for prices and headings",
        "deemphasis": "Lighter colors and smaller text for secondary info",
        "contrast": "Strategic use of dark green against light backgrounds"
      }
    },
    "responsivePatterns": {
      "mobile": {
        "layout": "Single column, full-width cards",
        "navigation": "Bottom floating nav bar with rounded corners",
        "safeAreas": "Respect iOS/Android safe area insets",
        "scrolling": "Vertical scroll with snap points for cards"
      }
    },
    "contentPatterns": {
      "homeScreen": {
        "structure": "Header with title + search → Filter tabs → Product grid → Bottom navigation",
        "header": {
          "subtitle": "Smaller, lighter text (e.g., 'Find Your')",
          "title": "Large, bold main heading (e.g., 'Favorite Plants')",
          "action": "Circular icon button (search)"
        },
        "filterTabs": {
          "layout": "Horizontal row of pill buttons",
          "defaultSelected": "First tab ('All')",
          "style": "Active state uses primary dark green"
        },
        "productGrid": {
          "columns": 1,
          "gap": "16px",
          "cardStyle": "Full-width rounded cards with image + info"
        }
      },
      "detailScreen": {
        "structure": "Header with back/favorite → Large image → Title/rating/price → Description → Info grid → CTA button",
        "header": {
          "left": "Back button",
          "center": "Page title ('Details')",
          "right": "Favorite/heart button"
        },
        "image": {
          "size": "Large, prominent display",
          "background": "Soft sage green rounded container",
          "padding": "Generous padding around product"
        },
        "infoSection": {
          "title": "Product name (bold, large)",
          "rating": "Star icon + rating + review count",
          "price": "Large, bold, right-aligned",
          "description": "Multi-line text with 'Read More' link"
        },
        "plantInfo": {
          "title": "'Plant Information' heading",
          "grid": "5-column grid showing specs (Category, Plant, Size, Height, Humidity)",
          "style": "Label above, value below, compact spacing"
        },
        "cta": {
          "position": "Fixed or sticky at bottom",
          "style": "Full-width primary button",
          "text": "'Add To Cart'"
        }
      },
      "bottomNavigation": {
        "structure": "Floating pill-shaped bar with 4-5 icons",
        "position": "Fixed bottom with margin from screen edges",
        "style": "Dark green background with white icons",
        "activeState": "White circular background behind active icon",
        "icons": [
          "Home (active default)",
          "Shopping cart",
          "Favorites/heart",
          "User/profile"
        ]
      },
      "favoriteButton": {
        "position": "Absolute top-right within image container",
        "style": "White circular button with heart icon",
        "states": {
          "default": "Outline heart",
          "active": "Filled heart with primary color"
        },
        "animation": "Scale/heartbeat on tap"
      }
    },
    "stateManagement": {
      "loading": {
        "style": "Skeleton screens with soft gray shimmer",
        "color": "rgba(200, 198, 190, 0.3)"
      },
      "empty": {
        "style": "Centered illustration + message",
        "tone": "Friendly and encouraging"
      },
      "error": {
        "style": "Inline message with icon",
        "color": "#c44545"
      },
      "favorite": {
        "animation": "Heart icon fills with color and scales up briefly",
        "feedback": "Haptic feedback on tap (mobile)"
      }
    },
    "accessibility": {
      "contrast": {
        "textOnLight": "Minimum 4.5:1 ratio",
        "textOnDark": "White text on dark green meets WCAG AA"
      },
      "touchTargets": {
        "minimum": "44x44px",
        "spacing": "8px minimum between targets"
      },
      "focusStates": {
        "style": "2px solid outline with primary color",
        "offset": "2px"
      }
    },
    "bestPractices": {
      "mobileFirst": "Design for smallest screen first, scale up",
      "performanceOptimized": "Lazy load images, optimize assets",
      "gestureSupport": "Swipe gestures for navigation where appropriate",
      "feedbackLoop": "Visual and haptic feedback for all interactions",
      "consistency": "Maintain consistent spacing, sizing, and styling throughout"
    }
  }
}